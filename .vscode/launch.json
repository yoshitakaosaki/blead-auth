{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8080"
            ],
            "django": true,
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "djrestauthPrj.settings"  // ★追加これ！
            }
        }
    ]
}